<h1>Editing Book</h1>

<%= form_with model: @booker, url: update_booker_path(@booker.id), method: :patch do |f| %>

  <h4>Title:</h4>
  <%= f.text_field :title %>

  <h4>Body:</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", booker_path(@booker.id) %>

  <%= link_to "Back", "/bookers/index" %>

<% end %>

