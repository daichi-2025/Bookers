<h1>Editing Book</h1>

<% if @booker.errors.any? %>
  <%= @booker.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @booker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @booker, url: book_path(@booker.id), method: :patch do |f| %>

  <h4>Title:</h4>
  <%= f.text_field :title %>

  <h4>Body:</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@booker.id) %>

  <%= link_to "Back", books_path %>

<% end %>

